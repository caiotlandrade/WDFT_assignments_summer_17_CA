<html>
    <head>
        <title>Home</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <link rel="stylesheet" href="/styles.css">        
    </head>

    <body>
        <div class="container">
            <div id="movie-details">
                <h1 class="text-center"><%= myMovie.title %></h1>
                <div class="row">
                    <div class="col-xs-5">
                        <img class="movie-poster" src="<%= myMovie.poster /* text for movie poster */ %>" />
                    </div>
                    <div class="col-xs-7">
                        <table class="table">
                            <%  let allKeys = Object.keys(myMovie);
                                for (var i=0; i<allKeys.length; i++) {
                                    if( allKeys[i] !== "poster" && allKeys[i] !== "id") {
                            %>
                            <tr>
                                <td><%= allKeys[i] /* name of key (e.g., title) */ %></td>
                                <td><%= myMovie[allKeys[i]] /* value (e.g., The Matrix) */ %></td>
                            </tr>
                                <% } %>
                            <% } %>
                        </table>
                    </div>
                </div>

                <div class="row">
                    <div class=buttons>
                        <a class="btn btn-primary" href="/"<% /* link to main page */ %>>Back</a>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>

